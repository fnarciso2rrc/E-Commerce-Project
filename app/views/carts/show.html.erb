<% if !@cart_item.nil? && @cart_item.errors.any? %>
    <ul>
        <% @cart_items.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <% end %>
    </ul>
<% end %>

<% if @cart_items.size > 0 %>
    <% @cart_items.each do |item| %>
        <div class="card">
            <div class="card-image">
                <figure class="image is-4by3">
                    <img
                        src="https://bulma.io/assets/images/placeholders/1280x960.png"
                        alt="Placeholder image"
                    />
                </figure>
            </div>

            <% if controller_name == "products" && action_name == "index" %>
                <div class="card-content">
                    <div class="media">
                        <div class="media-content">
                            <p class="title is-4">
                                <% if show_link %>
                                    <%= link_to product.product_name, product %> <!-- Link on the index page -->
                                <% else %>
                                    <%= product.product_name %> <!-- Plain text on the show page -->
                                <% end %>
                            </p>
                        </div>
                    </div>
                </div>
            <% end %>

            <footer class="card-footer">
                <p class="card-footer-item">
                    <%= number_to_currency product.price %>
                </p>
                <%= form_for(item, remote: true) do |f| %>
                    <%= f.hidden_field :product_id, value: item.product.id %>
                    <h5><%= item.product.price %></h5>
                    <div class="form-group">
                        <%= f.text_field :quantity, value: item.quantity.to_i, min: 1, class: 'form-control' %>
                    </div>
                    <div class="button">
                        <%= f.submit "Update Quantity", class: 'button' %>
                        <%= link_to "Delete", item, method: :delete, remote: true, class: 'button' %>
                    </div>
                    <span>Total Price: <%= item.total_price %></span>
                <% end %>
            </footer>
        </div>
    <% end %>
<% else %>
<% end %>
