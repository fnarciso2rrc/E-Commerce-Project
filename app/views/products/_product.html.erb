<div id="<%= dom_id product %>">
  <p>
    <strong>Product name:</strong>
    <%= product.product_name %>
  </p>

  <p>
    <strong>Brand:</strong>
    <%= product.brand %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= product.price %>
  </p>

  <p>
    <strong>Ranking:</strong>
    <%= product.ranking %>
  </p>

  <p>
    <strong>Ingredients:</strong>
    <%= product.ingredients %>
  </p>

</div>
