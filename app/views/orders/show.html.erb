<h1>Order Details</h1>

<% if @order %>
  <p><strong>Order ID:</strong> <%= @order.id %></p>
  <p><strong>Status:</strong> <%= @order.status %></p>
  <p><strong>Total Amount:</strong> <%= number_to_currency(@order.total_amount) %></p>
  <p><strong>Date:</strong> <%= @order.created_at.strftime("%B %d, %Y") %></p>

  <h3>Products</h3>
  <ul>
    <% @order_items.each do |item| %>
      <li>
        <%= item.product.product_name %> - <%= item.quantity %> x <%= number_to_currency(item.product.price) %>
      </li>
    <% end %>
  </ul>

<% else %>
  <p>Order not found.</p>
<% end %>